
@model GirlyMerely.Core.Models.Invoice

@{
    ViewBag.Title = "Send";
}
<h4 class="card-label">
    آیا مطمئن هستید که می خواهید این سفارش را ارسال کنید؟
</h4>
<dl class="row" style="padding-top:10px">
    <dt class="col-sm-4">
        @Html.DisplayNameFor(model => model.InvoiceNumber)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(model => model.InvoiceNumber)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(model => model.CustomerName)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(model => model.CustomerName)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(model => model.AddedDate)
    </dt>
    <dd class="col-sm-8">
        @ViewBag.PersianDate
    </dd>
</dl>
<div style="float:left">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="ارسال" class="btn btn-danger mr-2" />
    }
</div>

