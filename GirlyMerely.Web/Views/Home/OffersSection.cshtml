@model List<GirlyMerely.Core.Models.Offer>

<div class="banner-area">
    <div class="container">
        <div class="row">
            @if (Model.Count > 0)
            {
                <div class="col-md-3 col-xs-12">
                    <div class="banner-wrapper">
                        <a href="/Shop/ProductList/?offer=@Model[0].Id"><img src="/Files/OffersImages/@Model[0].Image" alt="@Model[0].Title"></a>
                    </div>
                </div>
            }
            @if (Model.Count > 1)
            {
                <div class="col-md-6 col-xs-12 mt-res-sx-30px">
                    <div class="banner-wrapper">
                        <a href="/Shop/ProductList/?offer=@Model[1].Id"><img src="/Files/OffersImages/@Model[1].Image" alt="@Model[1].Title"></a>
                    </div>
                </div>
            }
            @if (Model.Count > 2)
            {
                <div class="col-md-3 col-xs-12 mt-res-sx-30px">
                    <div class="banner-wrapper">
                        <a href="/Shop/ProductList/?offer=@Model[2].Id"><img src="/Files/OffersImages/@Model[2].Image" alt="@Model[2].Title"></a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
